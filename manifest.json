{
  "name": "Salomon",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "As palavras podem mudar o rumo da embarcação",
  "homepage_url": "https://github.com/angeliski/salomon",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "idle",
    "notifications"
  ]
}